<!-- views/create-resume.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Resume</title>
</head>
<body>
    <h1>Create Resume</h1>
    <form action="/create-resume" method="post">
        <!-- Form fields for creating a resume -->
        <input type="text" name="resumeName" placeholder="Name of Resume" required><br>
        <input type="text" name="name" placeholder="Name" required><br>
        <input type="text" name="qualifications" placeholder="Qualifications" required><br>
        <input type="text" name="schooling" placeholder="Schooling" required><br>
        <input type="text" name="experience" placeholder="Experience" required><br>
        <button type="submit">Create Resume</button>
    </form>
</body>
</html>
